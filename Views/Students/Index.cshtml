@model IEnumerable<ClubManager.Models.Student>

<h2>Danh sách thành viên</h2>
<a asp-action="Create" class="btn btn-primary">Thêm thành viên</a>
<table class="table table-bordered mt-3">
    <tr>
        <th>Họ và tên</th>
        <th>Email</th>
        <th>Ngày tạo</th>
        <th>Hành động</th>
    </tr>
@foreach (var student in Model)
{
    <tr>
        <td>@student.FullName</td>
        <td>@student.Email</td>
        <td>@student.CreatedAt.ToShortDateString()</td>
        <td>
            <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Sửa</a>
            <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-sm btn-danger">Xóa</a>
        </td>
    </tr>
}
</table>

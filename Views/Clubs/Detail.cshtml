@model ClubManager.Models.Club

@{
    ViewData["Title"] = "Chi tiết CLB";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Mô tả</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Ngày thành lập</dt>
        <dd class="col-sm-9">@Model.FoundedDate.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>

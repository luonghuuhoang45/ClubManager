@model ClubManager.Models.ViewModels.HomeIndexViewModel

@{
    ViewData["Title"] = "Trang chủ";
}

<h2 class="text-center mb-4">Chào mừng đến với hệ thống quản lý CLB!</h2>

<!-- Tabs -->
<ul class="nav nav-tabs mb-4" id="homeTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="clubs-tab" data-bs-toggle="tab" data-bs-target="#clubs" type="button" role="tab">Các CLB</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="events-tab" data-bs-toggle="tab" data-bs-target="#events" type="button" role="tab">Sự kiện đang mở</button>
    </li>
</ul>

<div class="tab-content" id="homeTabsContent">

    <!-- Tab 1: CLB -->
    <div class="tab-pane fade show active" id="clubs" role="tabpanel">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var club in Model.Clubs)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@club.Club.Name</h5>
                            <p class="card-text">@club.Club.Description</p>
                            <p><strong>Ngày thành lập:</strong> @club.Club.FoundedDate.ToString("dd/MM/yyyy")</p>

                            @if (club.HasJoined)
                            {
                                <span class="badge bg-success">Đã tham gia</span>
                            }
                            else if (club.HasRequested)
                            {
                                <span class="badge bg-warning text-dark">Chờ duyệt</span>
                            }
                            else if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <form asp-action="JoinClub" method="post">
                                    <input type="hidden" name="clubId" value="@club.Club.Id" />
                                    <button type="submit" class="btn btn-primary btn-sm">Xin gia nhập</button>
                                </form>
                            }
                            else
                            {
                                <span class="text-muted">Đăng nhập để tham gia</span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Tab 2: Sự kiện -->
    <div class="tab-pane fade" id="events" role="tabpanel">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var ev in Model.Events)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-info">
                        <div class="card-body">
                            <h5 class="card-title">@ev.Title</h5>
                            <p class="card-text">@ev.Description</p>
                            <p><strong>Thời gian:</strong> @ev.StartTime.ToString("dd/MM/yyyy HH:mm")</p>
                            <p><strong>CLB:</strong> @ev.Club?.Name</p>

                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                var hasJoinedClub = Model.JoinedClubIds.Contains(ev.ClubId);
                                if (hasJoinedClub)
                                {
                                    <form asp-controller="Events" asp-action="Join" method="post">
                                        <input type="hidden" name="eventId" value="@ev.Id" />
                                        <button class="btn btn-success btn-sm">Tham gia sự kiện</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="JoinClub" method="post">
                                        <input type="hidden" name="clubId" value="@ev.ClubId" />
                                        <button class="btn btn-outline-primary btn-sm">Xin gia nhập CLB trước</button>
                                    </form>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Đăng nhập để tham gia</span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
